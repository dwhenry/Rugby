!!!
%html
  %head
    %title 
      Rugby Tipper
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = stylesheet_link_tag 'user_details', 'input'
  %body
    .page
      = render :partial => 'layouts/user_details'
      = yield

      - if @current_user
        = render :partial => 'layouts/left_menu'
        = render :partial => 'layouts/right_menu'

%script{:type=>"text/javascript"} 
  Event.observe(window, 'load', function() {
  if($('right_menu')){
  height = $$('.page').first().getHeight() - 47;
  $('right_menu').setStyle({'height': height + 'px'});
  $('left_menu').setStyle({'height': height + 'px'});
  };
  });
