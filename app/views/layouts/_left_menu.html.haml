#left_menu
  .row
    - team = current_user.team
    - if team
      .element
        = "Go #{team.name}"
      .element
        = image_tag "flags/#{team.name}.png"
      - team.matches.each do |match|
        .element
          = "v #{match.opponent_to(team).name}"
          - if match.sides.first.score
            = "(#{match.result.details})"
    - else
      Please Select Team
  .row
    = link_to 'All Teams', teams_path
  .row
    = link_to 'Matches', matches_path
  .row
    = link_to 'Instructions', main_index_path

