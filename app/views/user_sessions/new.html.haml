.header
  Login

.instruct_wrapper
  .instruct_column{:style => 'background: #DDD;'}
    .input_row.row_header
      Instructions
    = render :partial => 'main/instructions'

  .instruct_column
    = form_for @user_session, :url => user_session_path do |f|
      - if @user_session.errors.any?
        #error_explanation.input_row
          %h2
            = pluralize(@user_session.errors.count, "error")
            prohibited:
          %ul
            - @user_session.errors.full_messages.each do |msg|
              %li= msg
      .input_row
        .field
          = f.label :login
        .value
          = f.text_field :login
      .input_row
        .field
          = f.label :password
        .value
          = f.password_field :password
      .input_row
        .field
          = f.label :remember_me
        .value
          = f.check_box :remember_me
      .input_row
        .submit
          = f.submit "Login"
          |
          = link_to 'Register', new_user_path

